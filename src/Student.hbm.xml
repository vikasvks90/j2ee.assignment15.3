<?xml version='1.0' encoding='UTF-8'?>  
<!DOCTYPE hibernate-mapping PUBLIC  
 "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
 "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">  
  
<hibernate-mapping>  
	<class name="assignment15.session3.bean.Student" table="Student">  
		<id name="stud_id">  
	 		<generator class="native"></generator>  
		</id>          
		<property name="stud_name"></property>  
		<property name="stud_marks"></property> 
		<property name="stud_join_date"></property>         
	</class>          
</hibernate-mapping>  